{
  "manifest_version": 3,
  "name": "Image Scraper",
  "version": "1.0",
  "description": "Scrape and download all images from the current tab",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}